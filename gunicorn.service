[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/project_select/backend
ExecStart=/home/ubuntu/project_select/backend/venv/bin/gunicorn \
        --workers 3 \
        --bind 0.0.0.0:8000 \
        --env DJANGO_SETTINGS_MODULE=config.settings \
        config.wsgi:application

[Install]
WantedBy=multi-user.target
